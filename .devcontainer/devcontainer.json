// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "PyTorch",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "nvcr.io/nvidia/pytorch:23.06-py3",
	"build": {
        // Path is relative to the devcontainer.json file.
        "dockerfile": "../Dockerfile.vscode"
    },
	"runArgs": ["--gpus=all", "--ipc=host"],
	"mounts": [
		"source=/home/marc/models,target=/workspaces/models,type=bind,consistency=cached",
		"source=/home/marc/data,target=/workspaces/data,type=bind,consistency=cached"
	],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip install -e . && pip install -e .[nlp]"

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"vscode-icons-team.vscode-icons",
				"wayou.vscode-todo-highlight",
				"timonwong.shellcheck"
			  ]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}